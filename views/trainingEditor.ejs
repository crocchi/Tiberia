<!DOCTYPE html>
<html>
<head>
  <title>Editor Dataset JSONL</title>
  <style>
    textarea { width: 90%; height: 60px; }
    .row { border-bottom: 1px solid #ccc; margin-bottom: 10px; }
  </style>
</head>
<body>
  <h1>Editor Dataset JSONL</h1>
  <div style="display: flex; height: 80vh;">
    <div id="userList" style="width: 35%; overflow-y: auto; border-right: 1px solid #ccc; padding: 10px;"></div>
    <div id="editorPane" style="width: 65%; padding: 10px;">
      <h3>Anteprima/Editor Riga</h3>
      <div id="messagesView"></div>
      <button id="editRawBtn" style="margin-top: 10px;">Modifica JSON grezzo</button>
      <div id="rawEditor" style="display:none; margin-top:10px;">
        <textarea id="editorArea" style="width: 100%; height: 300px;"></textarea><br>
        <button id="saveBtn" style="margin-top: 10px;">Salva Modifica</button>
        <button id="deleteBtn" style="margin-top: 10px; margin-left: 10px; background: #ff5252; color: white;">Elimina Riga</button>
        <button id="closeRawBtn" style="margin-top: 10px; margin-left: 10px;">Chiudi JSON</button>
      </div>
    </div>
  </div>
  <script>
    let dataset = [];
    let selectedIndex = null;
    async function loadRows() {
      const res = await fetch('/training/json');
      dataset = await res.json();
      renderUserList();
      clearEditor();
    }
    function renderUserList() {
      const userList = document.getElementById('userList');
      userList.innerHTML = '';
      dataset.forEach((row, i) => {
        const userMsg = row.messages?.find(m => m.role === 'user');
        const preview = userMsg ? userMsg.content.slice(0, 60) : '[Nessun messaggio user]';
        const div = document.createElement('div');
        div.className = 'user-preview';
        div.textContent = `${i+1}. ${preview}${userMsg && userMsg.content.length > 60 ? '...' : ''}`;
        div.style.cursor = 'pointer';
        div.style.padding = '8px 4px';
        div.style.borderBottom = '1px solid #eee';
        if (i === selectedIndex) div.style.background = '#ffe082';
        div.onclick = () => selectRow(i);
        userList.appendChild(div);
      });
    }
    function selectRow(i) {
      selectedIndex = i;
      renderUserList();
      showMessagesView(dataset[i]);
      document.getElementById('rawEditor').style.display = 'none';
    }

    function showMessagesView(row) {
      const container = document.getElementById('messagesView');
      container.innerHTML = '';
      if (!row || !Array.isArray(row.messages)) {
        container.textContent = 'Nessun messaggio.';
        return;
      }
      row.messages.forEach((msg, idx) => {
        const div = document.createElement('div');
        div.style.marginBottom = '12px';
        div.style.padding = '8px';
        div.style.border = '1px solid #ddd';
        div.style.borderRadius = '6px';
        div.style.background = msg.role === 'user' ? '#e3f2fd' : '#fffde7';
        let sizeHigh=msg.role === 'assistant' ? 'min-height:100px;' : 'min-height:60px;';
        div.innerHTML = `<b>${msg.role}</b><br><textarea style='width:98%;${sizeHigh}' data-msg-idx='${idx}'>${msg.content.replace(/</g,'&lt;')}</textarea>`;
        container.appendChild(div);
      });
      // Pulsante salva modifiche inline
      const saveBtn = document.createElement('button');
      saveBtn.textContent = 'Salva Modifiche';
      saveBtn.style.marginTop = '10px';
      saveBtn.onclick = async function() {
        if (selectedIndex === null) return;
        // Aggiorna i content dei messaggi
        const textareas = container.querySelectorAll('textarea[data-msg-idx]');
        textareas.forEach(ta => {
          const idx = parseInt(ta.getAttribute('data-msg-idx'));
          dataset[selectedIndex].messages[idx].content = ta.value;
        });
        // Salva lato server
        await fetch('/training/update', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ index: selectedIndex, newRow: dataset[selectedIndex] })
        });
        alert('Modifiche salvate!');
        renderUserList();
      };
      container.appendChild(saveBtn);
    }
    function clearEditor() {
      document.getElementById('messagesView').innerHTML = '';
      document.getElementById('editorArea').value = '';
      document.getElementById('rawEditor').style.display = 'none';
      selectedIndex = null;
    }
    document.getElementById('saveBtn').onclick = async function() {
      if (selectedIndex === null) return alert('Seleziona una riga da modificare!');
      const val = document.getElementById('editorArea').value;
      try {
        const newRow = JSON.parse(val);
        await fetch('/training/update', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ index: selectedIndex, newRow })
        });
        dataset[selectedIndex] = newRow;
        alert('Salvato!');
        showMessagesView(newRow);
        document.getElementById('rawEditor').style.display = 'none';
        renderUserList();
      } catch (e) {
        alert('Errore JSON!');
      }
    };
    document.getElementById('deleteBtn').onclick = async function() {
      if (selectedIndex === null) return alert('Seleziona una riga da eliminare!');
      if (!confirm('Sei sicuro di voler eliminare questa riga?')) return;
      await fetch('/training/delete', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ index: selectedIndex })
      });
      dataset.splice(selectedIndex, 1);
      clearEditor();
      renderUserList();
    };

    document.getElementById('editRawBtn').onclick = function() {
      if (selectedIndex === null) return alert('Seleziona una riga!');
      document.getElementById('editorArea').value = JSON.stringify(dataset[selectedIndex], null, 2);
      document.getElementById('rawEditor').style.display = 'block';
    };
    document.getElementById('closeRawBtn').onclick = function() {
      document.getElementById('rawEditor').style.display = 'none';
    };
    loadRows();
  </script>
</body>
</html>